# Security

[permission http]
IP_PROTOCOL = tcp
FROM_PORT = 80
TO_PORT = 80

[permission http2]
IP_PROTOCOL = tcp
FROM_PORT = 5000
TO_PORT = 5000

[permission ipython_notebook]
IP_PROTOCOL = tcp
FROM_PORT = 8888
TO_PORT = 8888

[permission ssh]
